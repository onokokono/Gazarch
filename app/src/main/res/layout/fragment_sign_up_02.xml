<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.example.marceline.gazarch.Login.Fragment.SignUp_02">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Толгой хэсэг -->
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/SignUpFragment_02_BackBtn"
                android:padding="10dp"
                android:src="@mipmap/ic_keyboard_arrow_left_black_24dp"
                android:scaleType="centerCrop"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:textSize="15dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Personal Information"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:background="@drawable/lightgreystrokebackground"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </LinearLayout>
        <!--^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^-->
        <!-- Бүртгүүлэх хэсэг -->
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SignUpFragmentProfileImageView"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ononaimar"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lightgreystrokebackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Spinner
                        android:id="@+id/SignUpFragmentGenderSpinner"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SignUpFragmentBirthDateLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:background="@drawable/lightgreystrokebackground"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/SignUpFragmentBirthYeartxt"
                            android:gravity="center"
                            android:text="YEAR"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/lightgreystrokebackground"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/SignUpFragmentBirthMonthtxt"
                            android:gravity="center"
                            android:text="MONTH"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/lightgreystrokebackground"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/SignUpFragmentBirthDaytxt"
                            android:gravity="center"
                            android:text="DAY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lightgreystrokebackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Spinner
                        android:id="@+id/SignUpFragmentRegionsSpinner"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:background="@drawable/lightgreystrokebackground"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <EditText
                    android:id="@+id/SignUpFragmentPhonenumbertxt"
                    android:inputType="phone"
                    android:textSize="15dp"
                    android:textColorHint="@color/LoginStokeBackColor"
                    android:hint="(+976) Phone number"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lightbluecornerbackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Button
                        android:id="@+id/SignUpFragmentSignUpBtn"
                        android:textColor="@color/White"
                        android:text="SIGN UP"
                        android:background="@color/Transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:visibility="gone"

                        android:textSize="16dp"
                        android:textColor="@color/White"
                        android:text="SIGN UP"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^-->
        <!-- Нэвтрэх болон зочноор нэвтрэх хэсэг -->
        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/lightgreystrokebackground"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/LoginStokeBackColor"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Sign in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/LoginStokeBackColor"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/LoginStokeBackColor"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Go as guest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
        <!--^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^-->
    </RelativeLayout>

</FrameLayout>
